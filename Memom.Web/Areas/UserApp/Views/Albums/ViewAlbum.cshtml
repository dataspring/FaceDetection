@model PagedList.IPagedList<UserAlbumInstance>
@using PagedList.Mvc;
@using Memom.Entities.Models;

@{
    ViewBag.Title = "Albums' Photo Listing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>View Photo Album</h3>

<div class="row">
    <div class="small-12 medium-12 large-10 large-centered medium-centered columns">

        <ul class="clearing-thumbs small-block-grid-3 medium-block-grid-6 large-block-grid-8" data-clearing>
            @foreach(var item in Model)
            {
               <li>
                   <a href="@(item.FolderPath+item.PhotoFile)"><img data-caption="" src="@(item.ThumbnailFile == null ? item.FolderPath + item.PhotoFile : item.FolderPath + item.ThumbnailFile)" /></a>
               </li> 
            }
        </ul>

    </div>

</div>


