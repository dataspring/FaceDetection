@model MemomMvc52.Areas.UserAccount.Models.ChangePasswordFromResetKeyInputModel
@{
    ViewBag.Title = "Change Password";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="small-12 medium-6 medium-centered large-5 large-centered columns">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary("Please correct the following errors")
            @Html.AntiForgeryToken()

            <fieldset class="editor small">
                <legend>@ViewBag.Title</legend>
                @Html.EditorForModel()
                <div>
                    <button class="small alert">Change Password</button>
                </div>
            </fieldset>
        }

    </div>
</div>