@model MemomMvc52.Areas.UserAccount.Models.LoginInputModel
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>
        You are already logged in as @User.Identity.Name but you 
        tried to access a resource that you do not have permission
        for. Please login with an account that does have access
        or contact your administrator to grant you access.
    </p>
}

<div class="row">
    <div class="small-12 medium-6 medium-centered large-5 large-centered columns">



        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()

            <fieldset>
                <legend>@ViewBag.Title</legend>

                @Html.EditorForModel()

                <div>
                    <button class="small">Login</button>
                </div>

            </fieldset>
        }


    </div>
</div>


