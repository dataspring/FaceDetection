@{
    ViewBag.Title = "Verify Email";
}
<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="small-12 medium-8 medium-centered large-7 large-centered columns">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            <fieldset>
                <legend>Click To Have Your Email Address Confirmed</legend>
                <p>
                    <button class="small">Submit</button>
                </p>
            </fieldset>
        }

    </div>
</div>